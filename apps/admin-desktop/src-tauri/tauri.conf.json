{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Melqard Portal Desktop",
  "version": "0.0.1",
  "identifier": "com.melqard.portal.desktop",
  "build": {
    "beforeDevCommand": "",
    "devUrl": "http://localhost",
    "beforeBuildCommand": "",
    "frontendDist": "../src"
  },
  "app": {
    "windows": [
      {
        "title": "Melqard Portal Desktop",
        "width": 1200,
        "height": 760,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://pos.melqard.com/updates/portal/latest.json"
      ],
      "pubkey": "REPLACE_WITH_TAURI_UPDATER_PUBKEY"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": []
  }
}
