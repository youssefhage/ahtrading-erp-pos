# Edge (Store) environment overrides for deploy/docker-compose.edge.yml
#
# Copy to: deploy/edge/.env.edge
# Then start edge using: deploy/edge/start.sh

# Ports exposed on the Edge machine (LAN)
API_PORT=8001
ADMIN_PORT=3000

# Postgres (set strong password in real usage)
POSTGRES_DB=ahtrading
POSTGRES_USER=ahtrading
POSTGRES_PASSWORD=change-me

# App role (RLS enforced)
APP_DB_USER=ahapp
APP_DB_PASSWORD=change-me-too

# First boot only (then set BOOTSTRAP_ADMIN=0)
BOOTSTRAP_ADMIN=1
BOOTSTRAP_ADMIN_EMAIL=admin@ahtrading.local
BOOTSTRAP_ADMIN_PASSWORD=change-me
BOOTSTRAP_ADMIN_RESET_PASSWORD=1

# Attachments (MinIO defaults are fine for pilot)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
S3_BUCKET=attachments

# Optional: Edge -> Cloud sync (configure later)
# EDGE_SYNC_TARGET_URL=https://your-cloud-domain.com
# EDGE_SYNC_KEY=replace-with-strong-shared-secret
# EDGE_SYNC_NODE_ID=beirut-store-1

